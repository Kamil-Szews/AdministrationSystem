@model AdministrationSystem.ViewModels.DocumentManagerViewModel.IndexViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchCourse" method="post">
            <div class="form-group">
                <label style="font-size: 20px; font-weight: bold; margin-bottom: 10px;">Choose your course</label>
            </div>

            <div class="form-group">
                <div class="form-group">
                    <label>Choose course: </label>
                    <select id="courseDropdownId" name="courseDropdownId">
                        @foreach (var course in Model.AllCourses)
                        {
                            string group = course.Location + " " + course.Name + " " + @course.Day + " " + @course.Time;
                            <option value="@course.Id">@group</option>
                        }
                    </select>
                </div>
            </div>

            <div class="mb-2"></div>
            <div class="mb-2"></div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <form asp-action="GenerateAttedanceList" method="post">
            <div class="form-group">
                <label style="font-size: 20px; font-weight: bold; margin-bottom: 10px;">Generate attendance list</label>
            </div>
            
            <div class="form-group">
                @if (Model.ChoosenUsers != null)
                {
                    @foreach (var user in Model.ChoosenUsers)
                    {
                        <div>
                            <input type="checkbox" id="@user.Id" name="selectedUsers" value="@user.Id">
                            <label for="@user.Id">@user.Name @user.Surname</label>
                        </div>
                    }
                }
            </div>

            <div class="mb-2"></div>
            <div class="mb-2"></div>
            <button type="submit" class="btn btn-primary">Generate</button>
        </form>


        
    </div>
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        
    </div>
</div>

